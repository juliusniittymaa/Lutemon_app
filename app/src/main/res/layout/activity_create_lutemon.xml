<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lutemon_creator_background">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextName"
            android:hint="Enter Lutemon name"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

        <TextView
            android:text="Pick a Color:"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnRed"
                android:text="Red"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/lutemon_red"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/btnBlue"
                android:text="Blue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/lutemon_blue"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/btnGreen"
                android:text="Green"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/lutemon_green"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnPink"
                android:text="Pink"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/lutemon_pink"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/btnYellow"
                android:text="Yellow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/lutemon_yellow"
                android:textColor="@android:color/black" />
            <Button
                android:id="@+id/btnGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray"
                android:backgroundTint="@color/lutemon_gray"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCreate"
            android:text="Create Lutemon"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/base"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>